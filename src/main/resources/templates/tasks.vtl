<style>
h1{
  margin-top:60px;
}
</style>
<h1>Task list!</h1>

<div class="row">
#if ($tasks)

  <div class="card-columns">
    #foreach ($task in $tasks)
    <div class="card shadow border-0 text-center">
      <div class="card-body">
        <a class="card-text" href="/task/$task.getId()">$task.getDescription()</a>
      </div>
    </div>
  #end

  </div>
  #else
    <p>No tasks!</p>
#end 

</div>

<a href="/categories">Add New Task</a>
